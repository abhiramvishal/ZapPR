# GitHub OAuth (create app at https://github.com/settings/developers)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# JWT
JWT_SECRET=change-me-to-a-long-random-string-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRY_MINUTES=60

# Encryption for stored tokens (AES-GCM key, 32 bytes base64)
TOKEN_ENCRYPTION_KEY=

# Database
POSTGRES_USER=zappr
POSTGRES_PASSWORD=change-me
POSTGRES_DB=zappr

# Redis (optional, for job queue)
REDIS_URL=redis://redis:6379/0

# API
API_HOST=0.0.0.0
API_PORT=8000

# Caddy / Domain (for production)
DOMAIN=zappr.example.com
EMAIL=admin@example.com

# OAuth redirect (for mobile app - register in GitHub OAuth app)
OAUTH_REDIRECT_URI=zappr://auth/callback
